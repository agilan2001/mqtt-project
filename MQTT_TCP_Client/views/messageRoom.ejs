<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width">
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h1>
        <%= title %>
    </h1>
    <h5 style="width: max-content; margin: 10px auto; background: orange; padding: 5px; border: 1px solid; border-radius: 5px; font-size: 20px;">
        <%= clientId %></h5>
    <div class="row">
        <div class="card col-sm-6" style="border-width: 5px;">
            <div class="card-body">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="publish_topic" placeholder="Topic">
                    <label for="last_will_topic_txt">Topic</label>
                </div>

                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="publish_mes" placeholder="Message">
                    <label for="publish_mes">Message</label>
                </div>
                <div class="row g-2">

                    <div class="form-floating col-5">
                        <select class="form-select" id="publish_qos">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                        </select>
                        <label for="publish_qos">QoS</label>
                    </div>

                    <div class="form-check form-switch col-3" style="margin: 25px">
                        <input class="form-check-input" type="checkbox" id="publish_retain">
                        <label class="form-check-label" for="publish_retain">RETAIN</label>
                    </div>
                </div>
                <button class="btn btn-primary" style="display: block; margin: 10px auto"
                    onclick="publish_click()">PUBLISH</button>
            </div>
        </div>
        <div class="card col-sm-6" style="border-width: 5px;">
            <div class="card-body">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="subscribe_topic" placeholder="Topic">
                    <label for="subscribe_topic">Topic</label>
                </div>



                <div class="form-floating col-5">
                    <select class="form-select" id="subscribe_qos">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                    <label for="subscribe_qos">QoS</label>
                </div>

                <br>
                <button class="btn btn-success" style="margin: 5px"
                    onclick="subscribe_click()">SUBSCRIBE</button>

                <button class="btn btn-danger" style="margin: 5px"
                    onclick="unsubscribe_click()">UNSUBSCRIBE</button>

                <button class="btn btn-warning" style="display: block; margin: 5px"
                    onclick="show_subs_click()" data-bs-toggle="modal" data-bs-target="#ShowSubsModal">SHOW SUBSCRIPTIONS</button>
            </div>
        </div>


    </div>
    <button class="btn btn-danger m-3" style="float:right" onclick="disconnect_click()">DISCONNECT</button>
    
    <div class="toast-container" id="mes_cont" style="position: absolute; right: 10px; top: 10px;">
        <div class="toast bg-info">
            <div class="toast-header">
                <strong class="me-auto mes_topic">Bootstrap</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body mes_body">
                Hello, world! This is a toast message.
            </div>
        </div>
    </div>

    <!-- Show subscriptions modal -->
    <div class="modal fade" id="ShowSubsModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">SUBSCRIPTIONS</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="subs_cont">
              
            </div>
          </div>
        </div>
      </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4"
        crossorigin="anonymous"></script>

    <script>
        clientId = "<%= clientId %>"
        fetch("client/connect", {
            method: 'post',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                clientId: clientId,
                keep_alive: parseInt(<%= keep_alive %>),
                    <% if(last_will_topic) { %>
                last_will_topic: "<%= last_will_topic %>",
                    last_will_mes: "<%= last_will_mes %>",
                        last_will_qos: parseInt(<%= last_will_qos %>),
                            last_will_retain: <%= last_will_retain %>,
                    <% } %>
                })
            }).then(res => res.text()).then(text => {
                console.log(text)

                ws = new WebSocket(`ws://${window.location.host.split(":")[0] + ":5000"}/client_ws`);
                ws.addEventListener('open', function (event) {
                    ws.send(clientId);
                    console.log("ws opened")
                });
                ws.addEventListener('message', function (event) {
                    // rec_mes.innerHTML = event.data
                    var {topic, message} = JSON.parse(event.data)
                    var toast_container = document.getElementById("mes_cont")
                    var toast_el = toast_container.querySelector(".toast").cloneNode(true)
                    toast_el.querySelector(".mes_topic").innerHTML = topic
                    toast_el.querySelector(".mes_body").innerHTML = message

                    toast_container.appendChild(toast_el)

                    var bs_toast = new bootstrap.Toast(toast_el, { delay: 20000 })
                    bs_toast.show()

                    toast_el.addEventListener('hidden.bs.toast', function () {
                        toast_container.removeChild(toast_el)
                    })
                })
            })
    </script>
    <script src="/javascripts/script.js"></script>

</body>


</html>